<div class="row">
    <div class="col-md-12">
          <h2>Categories</h2>
          <hr />

        {{#if data.categories}}

        <table class="table table-responsive">
            <thead>
                <tr>
                <th>Category ID</th>

                <th>Category</th>

                </tr>
            </thead>
            <tbody>
                {{#each data.categories}}
                <tr>

                <td>{{id}}</td>

                <td><a href="/items?category={{id}}">{{category}}</a></td>


                </tr>
                {{/each}}
            </tbody>
        </table>            
        {{/if}}

        {{#unless data.categories}}
            <div class="col-md-12 text-center">
                        <strong>{{data.message}}</strong>
            </div>
        {{/unless}}

            

    </div>
</div>
